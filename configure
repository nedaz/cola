#!/bin/sh
echo "Populating dependency submodules..."
git submodule update --init

echo "Creating build directory..."
mkdir build 
cd build

echo "Running cmake..."
cmake ..
cd ..

echo "Make file generated."
echo "***************************************************************"
echo "Run make from the build directory to build the project"
echo "Alternatively run: make -C build from the main parent directory"
echo "****************************************************************"
